[user]
    name = Brendan Roy
    email = br3ndanr@gmail.com
[core]
	editor = nvim
[color]
    status = auto
    diff = auto
    branch = auto
    interactive = auto
[push]
    default = simple
	followTags = true
[log]
    decorate = true
[alias]
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    lg = log --color --graph --pretty=format:'%Cgreen%cD %Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --abbrev-commit
    pat = add --patch
    undo = reset --soft HEAD^
[credential]
    helper = cache --timeout=43200

[url "git@github.com:"]
    insteadOf = gh:
